<%= form_with(model: word, local: true) do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word %>
  </div>

  <div class="field">
    <%= form.fields_for :pinyin do |pinyinform| %>
      <%= pinyinform.label :pinyin %>
      <%= pinyinform.text_field :pinyin %>
    <% end %>
  </div>
  <div class="field">
    <%= form.fields_for :meaning do |meaningform| %>
      <%= meaningform.label :meaning %>
      <%= meaningform.text_field :meaning %>
    <% end %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
